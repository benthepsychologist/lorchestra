{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lorchestra.dev/schemas/ops.schema.json",
  "title": "Op",
  "description": "Operation taxonomy for lorchestra",
  "definitions": {
    "Op": {
      "type": "string",
      "description": "Valid operation identifiers",
      "enum": [
        "call",
        "plan.build",
        "storacle.submit",
        "compute.llm",
        "job.run"
      ]
    },
    "OpCategory": {
      "type": "string",
      "description": "High-level operation categories",
      "enum": ["call", "plan", "storacle", "compute", "job"]
    },
    "Backend": {
      "type": "string",
      "description": "Backend responsible for executing operations",
      "enum": ["callable", "native", "inferometer", "orchestration"]
    },
    "OpBackendMapping": {
      "description": "Mapping of operations to backends",
      "type": "object",
      "properties": {
        "call": { "const": "callable" },
        "plan.*": { "const": "native" },
        "storacle.*": { "const": "native" },
        "compute.*": { "const": "inferometer" },
        "job.*": { "const": "orchestration" }
      }
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/Op" }
  ]
}
