{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lorchestra.dev/schemas/ops.schema.json",
  "title": "Op",
  "description": "Operation taxonomy for lorchestra",
  "definitions": {
    "Op": {
      "type": "string",
      "description": "Valid operation identifiers",
      "enum": [
        "call.injest",
        "call.canonizer",
        "call.finalform",
        "call.projectionist",
        "call.workman",
        "compute.llm",
        "job.run"
      ]
    },
    "OpCategory": {
      "type": "string",
      "description": "High-level operation categories",
      "enum": ["call", "compute", "job"]
    },
    "Backend": {
      "type": "string",
      "description": "Backend responsible for executing operations",
      "enum": ["callable", "inferometer", "orchestration"]
    },
    "OpBackendMapping": {
      "description": "Mapping of operations to backends",
      "type": "object",
      "properties": {
        "call.*": { "const": "callable" },
        "compute.*": { "const": "inferometer" },
        "job.*": { "const": "orchestration" }
      }
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/Op" }
  ]
}
